<div class="container my-5 py-5">
  <div class="row">
    <%= render "layouts/intro" %>
    <div class="col-lg-5 mx-auto">
      <div class="bg-light p-5 border">
        <h2 class="text-center mb-5">Forgot your password?</h2>

        <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
          <%= render "devise/shared/error_messages", resource: resource %>

          <div class="field mb-3">
            <%= f.email_field :email, autocomplete: "email", class: "form-control", placeholder: "Email" %>
          </div>

          <div class="actions">
            <%= f.submit "Send me reset password instructions", class: "form-control btn btn-primary mb-3" %>
          </div>
        <% end %>

        <%= render "devise/shared/links" %>
      </div>
    </div>
  </div>
</div>
